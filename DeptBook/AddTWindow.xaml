<Window x:Class="DeptBook.AddTWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeptBook"
        mc:Ignorable="d"
        Title="AddTWindow" Height="250" Width="300">
    <Grid Margin="0,10,0.333,-0.333">
        <TextBlock x:Name="tbkCodeName" HorizontalAlignment="Left" Margin="45,31,0,0" TextWrapping="Wrap" Text="Amount" VerticalAlignment="Top"/>
        <TextBlock x:Name="tbkAssignment" HorizontalAlignment="Left" Margin="45,62,0,0" TextWrapping="Wrap" Text="Note" VerticalAlignment="Top"/>
        <TextBox x:Name="tbxCodeName" Text="{Binding Path=TAmount}" HorizontalAlignment="Left" Margin="119,28,0,0" TextWrapping="Wrap" Width="120" MinWidth="120" MinHeight="22" Height="22" VerticalAlignment="Top" />
        <TextBox x:Name="tbxAssignment" Text="{Binding Path=TNote}" HorizontalAlignment="Left" Height="69" Margin="119,62,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" MinWidth="120" MinHeight="69" />
        <Button x:Name="button" Content="Confirm" HorizontalAlignment="Left" Margin="119,150,0,0" VerticalAlignment="Top" Width="75" Click="button_Click" />

    </Grid>
</Window>
